<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8dp"
            android:layout_marginVertical="@dimen/_8dp"
            app:cardCornerRadius="@dimen/_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvNamaItem"
                    style="@style/Montserrat.Bold.Black1.14sp"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_8dp"
                    android:maxLines="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cvFotoProduk"
                    app:layout_constraintTop_toTopOf="@+id/cvFotoProduk"
                    tools:text="Gelas Bahan Metal Hijau Tua Murah Bagus Berkualitas" />

                <TextView
                    android:id="@+id/tvDocCode"
                    style="@style/Montserrat.Black1.14sp"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="@dimen/_8dp"
                    app:layout_constraintEnd_toStartOf="@+id/tvStatus"
                    app:layout_constraintStart_toEndOf="@+id/cvFotoProduk"
                    app:layout_constraintTop_toBottomOf="@+id/tvNamaItem"
                    tools:text="INV-k0d3b4y42" />

                <TextView
                    android:id="@+id/tvHargaDanQuanity"
                    style="@style/Montserrat.Bold.Black1.14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6dp"
                    app:layout_constraintStart_toStartOf="@+id/tvDocCode"
                    app:layout_constraintTop_toBottomOf="@+id/tvDocCode"
                    tools:text="Rp.10.000 - 3 barang" />

                <TextView
                    android:id="@+id/tvTotal"
                    style="@style/Montserrat.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6dp"
                    app:layout_constraintEnd_toEndOf="@+id/tvStatus"
                    app:layout_constraintTop_toBottomOf="@+id/tvStatus"
                    tools:text="Rp. 30.000" />

                <TextView
                    android:id="@+id/tvStatus"
                    style="@style/Montserrat.Black2.14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8dp"
                    android:text="@string/total_harga"
                    app:layout_constraintBottom_toBottomOf="@+id/tvDocCode"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvDocCode" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvFotoProduk"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_marginVertical="@dimen/_8dp"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="@dimen/_8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/ivProduk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>