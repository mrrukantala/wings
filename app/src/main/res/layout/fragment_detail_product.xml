<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.menu.home.detail.DetailProductFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:theme="@style/Montserrat.Bold.Black1.20sp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.kennyc.view.MultiStateView
            android:id="@+id/msvDetailProduct"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:msv_animateViewChanges="true"
            app:msv_emptyView="@layout/layout_default_empty"
            app:msv_loadingView="@layout/shimmer_detail_product"
            app:msv_viewState="content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nestedScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_0dp"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="380dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/cd_foto_detail_product"
                            android:scaleType="centerCrop"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:src="@drawable/img" />

                        <TextView
                            android:id="@+id/tvProductPrice"
                            style="@style/Montserrat.Bold.Black1.18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_16dp"
                            android:layout_marginTop="@dimen/_16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imageView2"
                            tools:text="Rp. 49.000" />

                        <TextView
                            android:id="@+id/tvProductDiscount"
                            style="@style/Montserrat.Bold.Black1.12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_16dp"
                            app:layout_constraintBottom_toBottomOf="@+id/tvProductPrice"
                            app:layout_constraintStart_toEndOf="@+id/tvProductPrice"
                            app:layout_constraintTop_toTopOf="@+id/tvProductPrice"
                            tools:text="Rp. 49.000" />

                        <TextView
                            android:id="@+id/tvProductName"
                            style="@style/Montserrat.Black1.20sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_16dp"
                            android:layout_marginTop="@dimen/_8dp"
                            app:layout_constraintTop_toBottomOf="@+id/tvProductPrice"
                            tools:layout_editor_absoluteX="16dp"
                            tools:text="@string/lbl_starbucks_coffee_caramel" />

                        <TextView
                            android:id="@+id/tvLabelDetailProduct"
                            style="@style/Montserrat.Bold.Black1.16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_16dp"
                            android:layout_marginTop="@dimen/_12dp"
                            android:text="@string/txt_detail_produk"
                            app:layout_constraintTop_toBottomOf="@+id/tvProductName"
                            tools:layout_editor_absoluteX="16dp" />

                        <TextView
                            android:id="@+id/desc"
                            style="@style/Montserrat.Black1.16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_16dp"
                            android:layout_marginTop="@dimen/_2dp"
                            app:layout_constraintTop_toBottomOf="@+id/tvLabelDetailProduct"
                            tools:layout_editor_absoluteX="16dp"
                            tools:text="Dimensi barang 2 cm x 2cm " />

                        <TextView
                            android:id="@+id/tvStock"
                            style="@style/Montserrat.Black2.12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_16dp"
                            android:text="@string/label_stock"
                            app:layout_constraintBottom_toBottomOf="@+id/tvUnit"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvUnit" />

                        <TextView
                            android:id="@+id/tvUnit"
                            style="@style/Button.GreyOutline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8dp"
                            android:layout_marginTop="8dp"
                            android:paddingHorizontal="@dimen/_16dp"
                            android:paddingVertical="@dimen/_8dp"
                            android:textSize="@dimen/_12sp"
                            app:layout_constraintStart_toEndOf="@+id/tvStock"
                            app:layout_constraintTop_toBottomOf="@+id/desc"
                            tools:text="PCS" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.core.widget.NestedScrollView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <Button
                        android:id="@+id/btnAddproduct"
                        style="@style/Button.Red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_marginVertical="@dimen/_16dp"
                        android:text="@string/label_beli"
                        android:textAllCaps="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.kennyc.view.MultiStateView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>