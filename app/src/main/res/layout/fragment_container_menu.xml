<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="containerMenuFragment"
            type="com.example.myapplication.presentation.menu.ContainerMenuFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.menu.ContainerMenuFragment">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment_menu"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0dp"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toTopOf="@+id/bnMenuUmkm"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/main_navigation" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnMenuUmkm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingVertical="@dimen/_8dp"
            app:itemIconTint="@drawable/selector_menu_icon"
            app:itemTextColor="@drawable/selector_menu_text"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/menu_bottom" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>